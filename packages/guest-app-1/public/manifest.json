{
  "id": "app1",
  "name": "Dashboard App",
  "entryUrl": "http://localhost:5174",
  "routeRegex": "^\\/app1(\\/.*)?$",
  "menuItems": [
    {
      "label": "Overview",
      "path": "/dashboard"
    },
    {
      "label": "Settings",
      "path": "/settings"
    }
  ],
  "bottomSheetRoutes": [
    {
      "id": "user-settings",
      "label": "User Settings",
      "path": "/settings/user",
      "description": "Open user settings in a bottom sheet"
    },
    {
      "id": "quick-dashboard",
      "label": "Quick Dashboard",
      "path": "/dashboard",
      "description": "View dashboard in a bottom sheet"
    }
  ],
  "proxy": {
    "enabled": true,
    "devServerUrl": "http://localhost:3001",
    "pathRewrite": {
      "^/": "/"
    },
    "headers": {
      "X-Dev-Mode": "true"
    }
  }
}
